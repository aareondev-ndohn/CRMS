{
      "styles": {
          "textStyleBase": {
              "description": "Base font description; set color and core font family",
              "values": [
                  {
                      "color": "@colorTextPrimary",
                      "fontFamily": "211f20"
                  }
              ]
          },
          "textStyleBase0": {
              "description": "Thin version of basic font",
              "extend": "textStyleBase",
              "values": {
                  "fontWeight": "100"
              }
          },
          "textStyleBase1": {
              "description": "Light version of basic font",
              "extend": "textStyleBase",
              "values": {
                  "fontWeight": "300"
              }
          },
          "mixinBody": {
              "values": {
                  "fontSize": "@textSizeBody"
              }
          },
          "mixinPrimary": {
              "values": {
                  "fontSize": "@textSizePrimary"
              }
          },
          "mixinSecondary": {
              "values": {
                  "fontSize": "@textSizeSecondary"
              }
          },
          "textStylePrimary": {
              "extend": [
                  "textStyleBase1",
                  "mixinPrimary"
              ]
          },
          "textStyleSecondary": {
              "extend": [
                  "textStyleBase0",
                  "mixinSecondary"
              ]
          },
          "textStyleBody": {
              "extend": [
                  "textStyleBase1",
                  "mixinBody"
              ]
          },
          "textStyleSecondaryHint": {
              "values": {
                  "fontFamily": "Bookerly",
                  "fontStyle": "italic",
                  "fontSize": "@textSizeSecondaryHint",
                  "color": "@colorTextPrimary"
              }
          }
      },
      "resources": [
          {
              "description": "Stock color for the light theme",
              "colors": {
                  "colorTextPrimary": "211f20"
              }
          },
          {
              "description": "Stock color for the dark theme",
              "when": "${viewport.theme == 'dark'}",
              "colors": {
                  "colorTextPrimary": "211f20"
              }
          },
          {
              "description": "Standard font sizes",
              "dimensions": {
                  "textSizeBody": 48,
                  "textSizePrimary": 30,
                  "textSizeSecondary": 23,
                  "textSizeSecondaryHint": 25
              }
          },
          {
              "description": "Common spacing values",
              "dimensions": {
                  "spacingThin": 6,
                  "spacingSmall": 12,
                  "spacingMedium": 24,
                  "spacingLarge": 48,
                  "spacingExtraLarge": 72
              }
          },
          {
              "description": "Common margins and padding",
              "dimensions": {
                  "marginTop": 40,
                  "marginLeft": 60,
                  "marginRight": 60,
                  "marginBottom": 40
              }
          }
      ],
      "type": "APL",
      "version": "1.0",
      "theme": "dark",
      "import": [
          {
              "name": "alexa-layouts",
              "version": "1.0.0"
          }
      ],
      "layouts": {},
      "mainTemplate": {
          "parameters": [
              "payload"
          ],
          "items": [
              {
                  "type": "Container",
                  "height": "100vh",
                  "items": [
                      {
                          "type": "Image",
                          "source": "${payload.bodyTemplate6Data.properties.backroundUrl}",
                          "scale": "best-fill",
                          "width": "100vw",
                          "height": "100vh",
                          "position": "absolute"
                      },
                      {
                          "type": "Container",
                          "direction": "row",
                          "items": [
                              {
                                  "paddingLeft": "@marginLeft",
                                  "paddingRight": "@marginRight",
                                  "paddingBodom": "@marginBottom",
                                  "paddingTop": "@marginTop",
                                  "type": "Text",
                                  "text": "${payload.bodyTemplate6Data.properties.headerText}",
                                  "top": 10,
                                  "fontWeight": "@fontWeightLight",
                                  "fontSize": "@fontSizeRegular",
                                  "position": "center",
                                  "width": 1000,
                                  "height": 200
                              },
                              {
                                  "type": "AlexaHeader",
                                  "headerAttributionImage": "${payload.bodyTemplate6Data.properties.logoUrl}",
                                  "top": 10,
                                  "right": 10,
                                  "position": "relative"
                              }
                          ]
                      },
                      {
                          "type": "Container",
                          "grow": 1,
                          "justifyContent": "${viewport.shape == 'round' ? 'center' : 'end'}",
                          "items": [
                              {
                                  "paddingLeft": "@marginLeft",
                                  "paddingRight": "@marginRight",
                                  "type": "Text",
                                  "text": "${payload.bodyTemplate6Data.properties.primaryText}",
                                  "style": "textStyleDisplay5",
                                  "width": 100,
                                  "height": 65,
                                  "top": "1vh",
                                  "align": "${viewport.shape == 'round' ? 'center' : 'left'}",
                                  "position": "absolute",
                                  "colorText": "211f20"
                              },
                              {
                                  "paddingLeft": "@marginLeft",
                                  "paddingRight": "@marginRight",
                                  "type": "Text",
                                  "text": "${payload.bodyTemplate6Data.properties.secondaryText}",
                                  "style": "textStyleDisplay8",
                                  "fontWeight": "@fontWeightBold", 
                                  "fontSize": "@fontSizeMedium",
                                  "width": 1200,
                                  "height": 300,
                                  "top": 100,
                                  "align": "${viewport.shape == 'round' ? 'center' : 'left'}",
                                  "position": "absolute",
                                  "colorText": "211f20"
                              }
                          ]
                      },
                      {
                          "when": "${viewport.shape != 'round'}",
                          "type": "AlexaFooter",
                          "footerHint": "${payload.bodyTemplate6Data.properties.hintText}",
                          "width": 1200,
                          "height": 160
                      }
                  ]
              }
          ]
      }
  }